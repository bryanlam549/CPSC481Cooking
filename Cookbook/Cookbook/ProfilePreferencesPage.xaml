<Page x:Class="Cookbook.ProfilePreferencesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookbook"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="576"
      Title="ProfilePreferencesPage">

    <Page.Background>
        <ImageBrush ImageSource="Images/background.png"/>
    </Page.Background>
    <Grid>
        <TextBlock Text="Preferences" HorizontalAlignment="Center" VerticalAlignment="Top" Height ="700" FontSize="36" FontWeight ="Bold" Margin="194,0,184,0"/>
        <TextBlock HorizontalAlignment="Left" Height="700" FontSize="30" Margin="0,93,0,87"><Run Text="Here you can "/><Run Text="find your measurement"/></TextBlock>
        <TextBlock Text="and temperature preferences." HorizontalAlignment="Left" Height="625" FontSize="30" Margin="0,131,0,124"/>
        <TextBlock HorizontalAlignment="Left" Height="500" FontSize="30" Margin="0,193,0,187"><Run Text="Press the toggle swit"/><Run Text="ch"/><Run Text=" to change"/></TextBlock>
        <TextBlock Text="your preferences!" HorizontalAlignment="Left" Height="425" FontSize="30" Margin="0,231,0,224"/>
        <TextBlock Text="Temperature" HorizontalAlignment="Left" Height="175" FontSize="30"/>
        <StackPanel Margin="-5,342,5,-33">
            <RadioButton Margin="5" Content="Celcius" FontSize="24"/>
            <RadioButton Margin="5" Content="Fahrenheit" FontSize="24"/>
        </StackPanel>
        <TextBlock Text="Weight" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="325" FontSize="30"/>
        <StackPanel Margin="-5,485,5,-33">
            <RadioButton Margin="5" Content="Ounces" FontSize="24"/>
            <RadioButton Margin="5" Content="Grams" FontSize="24"/>
        </StackPanel>




    </Grid>
</Page>
