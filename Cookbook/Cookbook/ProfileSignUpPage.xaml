<Page x:Class="Cookbook.ProfileSignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookbook"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="576"
      Title="ProfileSignUpPage">

    <Page.Background>
        <ImageBrush ImageSource="Images/background.png"/>
    </Page.Background>
    <Grid>
        <TextBlock Text="SIGN UP" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontWeight ="Bold"/>
        <TextBlock x:Name="nameText" Text="Username" HorizontalAlignment="Left" Height="700" FontSize="36" FontWeight ="Bold"/>
        <TextBlock x:Name="emailText" Text="Email" HorizontalAlignment="Left" Height="400" FontSize="36" FontWeight ="Bold"/>
        <TextBlock x:Name="passText" Text="Password" HorizontalAlignment="Left" Height="100" FontSize="36" FontWeight ="Bold"/>
        <TextBox x:Name="nameInput" HorizontalAlignment="Center" Height="39" Margin="28,164,42,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="506" FontSize="28" MaxLength="12" TextBoxBase.TextChanged="UserInput_TextChanged"/>
        <TextBox x:Name="emailInput" HorizontalAlignment="Center" Height="39" Margin="28,322,42,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="506" FontSize="28" TextBoxBase.TextChanged="EmailInput_TextChanged"/>
        <PasswordBox x:Name="passwordInput" HorizontalAlignment="Center" Height="39" Margin="28,468,42,0" VerticalAlignment="Top" Width="506" FontSize="28" PasswordChar="*" PasswordBox.PasswordChanged="PasswordInput_PasswordChanged"/>

        <Button Content="SIGN UP" FontWeight ="DemiBold" FontSize="32" Height="75" Width="383" Background="White" Margin="93,0,100,150" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="SignUp_Click" Style="{StaticResource CustomButtonStyle}">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>


        <TextBlock Text="* password must contain at least 8 characters" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Margin="28,512,42,0" Width="506"/>
        <TextBlock Text="* password must contain at least 1 digit" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Margin="28,550,42,0" Width="506"/>
        <TextBlock x:Name="invalidInput" Text="" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Margin="28,600,21,0" Width="527" Foreground="Red"/>
        <local:TransitionPageButton x:Name="_back" Grid.Row="6" Grid.Column="4" Width="90" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="90" Grid.ColumnSpan="2" Margin="0,0,10,20"/>
        <Frame x:Name="signUpMain" HorizontalAlignment="Left" Height="880" VerticalAlignment="Top" Width="576" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
