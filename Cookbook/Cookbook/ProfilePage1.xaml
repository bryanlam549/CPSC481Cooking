<Page x:Class="Cookbook.ProfilePage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookbook"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="576"
      Title="ProfilePage1">
    <Page.Background>
        <ImageBrush ImageSource="Images/background.png"/>
    </Page.Background>
    <Grid>
        <TextBlock Text="Create a profile page" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontWeight ="Bold"/>
        <TextBlock Text="Already have an account?" HorizontalAlignment="Center" Height ="300" FontSize="36" FontWeight ="Bold"/>
        <StackPanel>
            <Button Content="SIGN UP WITH EMAIL" FontWeight ="Bold" Height="75" Width="375" Background="White" Margin ="100" HorizontalAlignment="Center" Click="ProfileSignUp_Click" Style="{StaticResource CustomButtonStyle}"/>
            <Button Content="SIGN IN" FontWeight ="Bold" Height="75" Width="375" Background="White" Margin="100" HorizontalAlignment="Center" Click="ProfileSignIn_Click" Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
        <Frame x:Name="profileMain" HorizontalAlignment="Left" Height="880" VerticalAlignment="Top" Width="576" NavigationUIVisibility="Hidden"/>
    </Grid>


</Page>
